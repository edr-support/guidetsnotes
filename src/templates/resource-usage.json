{
  "id": "resource-usage-v1",
  "title": "High Resource Usage Investigation",
  "steps": [
    {
      "id": "triage",
      "title": "Initial Triage",
      "description": "Identify the environment and resource pressure.",
      "fields": [
        {
          "id": "resource_type",
          "label": "Resource Type",
          "type": "select",
          "required": true,
          "options": [
            { "label": "CPU", "value": "cpu" },
            { "label": "Memory (RAM)", "value": "ram" },
            { "label": "Disk I/O", "value": "disk" }
          ]
        },
        {
          "id": "hostname",
          "label": "Affected Hostname",
          "type": "text",
          "required": true,
          "placeholder": "e.g. prod-web-01"
        },
        {
          "id": "customer_tenant",
          "label": "EDR Tenant URL",
          "type": "text",
          "required": true,
          "placeholder": "e.g. cname.infocyte.com"
        }
      ]
    },
    {
      "id": "hardware",
      "title": "Hardware Requirements",
      "description": "Check minimum system specs.",
      "fields": [
        {
          "id": "meets_requirements",
          "label": "Does the device meet requirements? (https://edr.datto.com/help/Content/01-getting-started/hardware-os-requirements.htm)",
          "type": "select",
          "required": true,
          "options": [
            { "label": "Yes - Meets Requirements", "value": "yes" },
            { "label": "No - Below Minimums", "value": "no" }
          ]
        }
      ]
    },
    {
      "id": "evidence",
      "title": "Initial Evidence",
      "description": "Capture system state.",
      "fields": [
        {
          "id": "screenshot_upload",
          "label": "Upload Screenshot (Task Manager/HTOP)",
          "type": "image",
          "required": false
        },
        {
          "id": "top_output",
          "label": "Process List Output (CLI)",
          "type": "code",
          "required": false
        }
      ]
    },
    { "id": "location", "title": "Troubleshooting Location", "fields": [{ "id": "loc_note", "label": "Notes", "type": "textarea" }] },
    { "id": "policy_test", "title": "EDR Policy Test", "fields": [{ "id": "pol_note", "label": "Notes", "type": "textarea" }] },
    { "id": "monitoring", "title": "Real-Time Monitoring", "fields": [{ "id": "mon_note", "label": "Notes", "type": "textarea" }] },
    { "id": "ransomware", "title": "Ransomware Policy", "fields": [{ "id": "ran_note", "label": "Notes", "type": "textarea" }] },
    { "id": "rollback", "title": "Rollback Test", "fields": [{ "id": "rol_note", "label": "Notes", "type": "textarea" }] },
    { "id": "av_alert", "title": "AV: Alert Only", "fields": [{ "id": "ava_note", "label": "Notes", "type": "textarea" }] },
    { "id": "av_rtp", "title": "AV: Real Time Protection", "fields": [{ "id": "avp_note", "label": "Notes", "type": "textarea" }] },
    { "id": "av_dns", "title": "AV: Protection/DNS Secure", "fields": [{ "id": "avd_note", "label": "Notes", "type": "textarea" }] }
  ]
}